        <servlet-name>Itc700ExtractsVerifierServlet</servlet-name>
        <url-pattern>/Itc700ExtractsVerifier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiskSpaceServlet</servlet-name>
        <url-pattern>/DiskSpace</url-pattern>
    </servlet-mapping>
    <session-config>
